<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- style para o fundo do Título e Imagem Principal -->
    <style name="ViewBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/fundoApp</item>
    </style>

    <!-- style para o título -->
    <style name="TitleText">
        <item name="android:textColor">@color/letrasApp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- style para o ícone do Título -->
    <style name="ImageTitulo">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <!-- style para o botão de criar tarefa -->
    <style name="AddButton">
        <item name="android:backgroundTint">@color/fundoApp</item>
        <item name="android:textColor">@color/letrasApp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- style para o TextView Tarefas Criadas -->
    <style name="TaskText">
        <item name="android:textColor">@color/letrasApp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- style para a linha -->
    <style name="Viewlinha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/fundoApp</item>
    </style>

    <!-- style para o RecyclerView de tarefas fragment_task -->
    <style name="TaskRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- style para o contêiner do ConstraintLayout fragment_list -->
    <style name="TaskContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/fundoApp</item>
    </style>

    <!-- style para o CheckBox fragment_list -->
    <style name="TaskCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/letrasApp</item>
    </style>

    <!-- style para tarefa do recyclerview-->
    <style name="TaskTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/letrasApp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style para los textos de tarea -->
    <style name="TaskTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/letrasApp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para o AppCompatTextView que exibe a mensagem de "Sem tarefas" -->
    <style name="EmptyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/iconesTint</item>
    </style>

    <!-- style para o ImageView do botão de editar tarefa-->
    <style name="EditTaskImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/baseline_edit_24</item>
    </style>

    <!-- style para o ImageView do botão de excluir tarefa-->
    <style name="DeleteTaskImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:src">@drawable/baseline_delete_24</item>
    </style>

    <!-- Estilo para el TextView -->
    <style name="CenteredTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>
